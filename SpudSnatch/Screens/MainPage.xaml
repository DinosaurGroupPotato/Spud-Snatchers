<Page
    x:Class="SpudSnatch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpudSnatch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="TitleScreen" Source="/Data/ScreenBackgrounds/TitleScreen.png" Stretch="Fill" />
        <Button x:Name="StartGameButton" Content="Start Game" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Click="StartGameButton_Click"/>
        <Button x:Name="AboutButton" Content="About" HorizontalAlignment="Center" Margin="593,487,593,201" VerticalAlignment="Center" Width="94" Click="AboutButton_Click"/>
        <Button x:Name="HelpButton" Content="Help" HorizontalAlignment="Center" Margin="593,436,593,252" VerticalAlignment="Center" Width="94" Click="HelpButton_Click"/>
        <Button x:Name="HighScoreButton" Content="High Scores" HorizontalAlignment="Center" Margin="593,390,593,298" VerticalAlignment="Center" Width="94" Click="HighScoreButton_Click"/>
    </Grid>
</Page>
