<Page
    x:Class="SpudSnatch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpudSnatch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="TitleScreen" Source="/Data/ScreenBackgrounds/TitleScreen.png" Stretch="Fill" />
        <Button x:Name="StartGameButton" Content="Start Game" HorizontalAlignment="Center" VerticalAlignment="Center" Width ="100" Click="StartGameButton_Click"/>
        <Button x:Name="AboutButton" Content="About"  Width ="100" Click="AboutButton_Click" Margin="0,489,0,199" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="HelpButton" Content="Help" Margin="0,429,0,236" Height="35" Width ="100" Click="HelpButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="HighScoreButton" Content="High Scores"  Margin="0,390,0,298"  Width ="100" Click="HighScoreButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
