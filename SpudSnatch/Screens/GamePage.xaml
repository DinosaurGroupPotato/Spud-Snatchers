<Page
    x:Class="SpudSnatch.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpudSnatch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid x:Name="GameGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" KeyDown="Grid_KeyDown" KeyUp="Grid_KeyUp">
        <Image x:Name="TitleScreen" Source="/Data/ScreenBackgrounds/TemplateBackground.png" Stretch="Fill" />
        <TextBox x:Name="scoreBox" HorizontalAlignment="Left" Margin="354,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" KeyDown="Grid_KeyDown" KeyUp="Grid_KeyUp" FontFamily="Goudy Old Style" FontSize="18" IsReadOnly="True"/>
        <TextBlock x:Name="scoreTitle" HorizontalAlignment="Left" Margin="285,89,0,0" TextWrapping="Wrap" Text="Score:" VerticalAlignment="Top" FontFamily="Goudy Old Style" FontSize="24"/>
        <TextBlock x:Name="timeTitle" HorizontalAlignment="Left" Margin="685,89,0,0" TextWrapping="Wrap" Text="Time:" VerticalAlignment="Top" FontFamily="Goudy Old Style" FontSize="24"/>
        <TextBlock x:Name="timeDisplay" HorizontalAlignment="Left" Margin="745,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Goudy Old Style" FontSize="24"/>

    </Grid>
</Page>
