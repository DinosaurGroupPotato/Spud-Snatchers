<Page
    x:Class="SpudSnatch.Screens.Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpudSnatch.Screens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="TitleScreen" Source="/Data/ScreenBackgrounds/TemplateBackground.png" Stretch="Fill" />
        <TextBlock x:Name="HelpMe" HorizontalAlignment="Center" Margin="0,0,950,500" TextWrapping="Wrap" Text="Help" VerticalAlignment="Center" FontFamily="Goudy Old Style" FontSize="72"/>
        <Image x:Name="HelpScreen" Source="/Data/ScreenBackgrounds/HelpScreen.png" Stretch="None" />
        <Button x:Name="returnToMainPage" Content="Go Back" HorizontalAlignment="Left" Width="190" Margin="1015,603,0,0" VerticalAlignment="Top" FontFamily="Goudy Old Style" FontSize="32" Click="returnToMainPage_Click"/>
        <Button x:Name="getActualHelp" Content="Call for help?" HorizontalAlignment="Left" Margin="1015,503,0,0" VerticalAlignment="Top" FontFamily="Goudy Old Style" FontSize="32" Click="getActualHelp_Click"/>
    </Grid>
</Page>
